{
  "manifest_version": 3,
  "name": "PastVu Decade Selector",
  "version": "1.0",
  "description": "A Chrome extension that makes it easier to view PastVu photos by decade (e.g. 1980s, 1990s, etc.).",
  "permissions": ["cookies"],
  "host_permissions": ["https://pastvu.com/*"],
  "content_scripts": [
    {
      "matches": ["https://pastvu.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "128": "ic128.png"
    }
  }
}
